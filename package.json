{
  "name": "farmsfinder",
  "version": "1.0.0",
  "description": "Canadian Farm Directory",
  "scripts": {
    "prebuild": "node themes/farmfinders/assets/js/generate-categories.js",
    "build": "npm run build:css && hugo",
    "dev": "npm run prebuild && npm run build:css && hugo server",
    "deploy": "npm run prebuild && npm run build:css && hugo --minify",
    "generate": "node themes/farmfinders/assets/js/generate-categories.js",
    "build:css": "npx tailwindcss -i ./themes/farmfinders/assets/css/input.css -o ./themes/farmfinders/assets/css/output.css",
    "watch:css": "npx tailwindcss -i ./themes/farmfinders/assets/css/input.css -o ./themes/farmfinders/assets/css/output.css --watch"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "csv-parser": "3.0.0",
    "dotenv": "^17.2.2",
    "js-yaml": "4.1.0",
    "tailwindcss": "^3.4.13"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
